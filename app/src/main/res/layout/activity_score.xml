<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#fff"
    tools:context="com.example.eunice.scoreboard.ScoreActivity">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="50dp"
                    android:text="@string/home"
                    android:textSize="30dp"
                    android:textStyle="bold"
                    android:layout_weight="1"
                    android:id="@+id/home"
                    android:textColor="#000"
                    android:gravity="center"
                    android:layout_alignLeft="@+id/homescreen"
                    android:layout_alignStart="@+id/homescreen" />

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="50dp"
                    android:text="@string/visitors"
                    android:textSize="30dp"
                    android:textStyle="bold"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:textColor="#000"
                    android:id="@+id/visitors"
                    android:layout_alignLeft="@+id/visitorscreen"
                    android:layout_alignStart="@+id/visitorscreen" />



            </LinearLayout>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="200dp"
                    android:text="@string/zero"
                    android:textSize="80sp"
                    android:textStyle="bold"
                    android:layout_weight="1"
                    android:textAlignment="center"
                    android:background="#bcd"
                    android:id="@+id/homescreen"
                    android:layout_marginTop="60dp"
                    android:layout_marginLeft="15dp"
                    android:layout_marginRight="10dp"/>



                <TextView
                    android:layout_width="0dp"
                    android:layout_height="200dp"
                    android:text="@string/zero1"
                    android:textSize="80sp"
                    android:textStyle="bold"
                    android:textAlignment="center"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="15dp"
                    android:background="#bcd"
                    android:id="@+id/visitorscreen"
                    android:layout_marginTop="60dp"
                    android:layout_weight="1" />


            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <Button
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:id="@+id/homebutton"
                    android:text="@string/homeone"
                    android:layout_weight="1"
                    android:layout_marginRight="40dp"
                    android:layout_marginLeft="40dp"
                    android:textSize="20dp"
                    android:layout_marginTop="280dp"/>

                <Button
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="280dp"
                    android:gravity="center"
                    android:layout_weight="1"
                    android:layout_marginRight="40dp"
                    android:layout_marginLeft="40dp"
                    android:id="@+id/visitorbutton"
                    android:text="@string/homeone"
                    android:textSize="20dp"
                    />


            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">


                <Button
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="350dp"
                    android:layout_marginLeft="30dp"
                    android:layout_marginRight="30dp"
                    android:layout_weight="1"
                    android:id="@+id/save"
                    android:text="@string/save"
                    android:textSize="20dp"
                    />
                <Button
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:id="@+id/clear"
                    android:text="@string/clear"
                    android:textSize="20dp"
                    android:layout_marginTop="350dp"
                    android:layout_marginRight="30dp"
                    android:layout_marginLeft="30dp"/>

            </LinearLayout>


        </RelativeLayout>



    </ScrollView>


</RelativeLayout>
